<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="anchorPane" stylesheets="@../css/main_menu.css" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hu.alkfejl.controller.MainMenuController">
   <children>
      <Label text="The Snake Strikes Back" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="30.0" />
      <VBox alignment="CENTER" fillWidth="false" spacing="5.0" AnchorPane.leftAnchor="300.0" AnchorPane.rightAnchor="300.0" AnchorPane.topAnchor="300.0">
         <children>
            <Button mnemonicParsing="false" onAction="#startSinglePlayer" text="Play alone :(" textAlignment="CENTER" />
            <Button mnemonicParsing="false" onAction="#startMultiPlayer" text="Play with an acquaintance :|" textAlignment="CENTER" />
            <Button mnemonicParsing="false" onAction="#openLeaderboard" text="Leaderboard" />
            <Button mnemonicParsing="false" onAction="#openSettings" text="Settings" textAlignment="CENTER" />
            <Button mnemonicParsing="false" onAction="#exitApp" text="Exit" textAlignment="CENTER" />
         </children>
      </VBox>
   </children>
</AnchorPane>
