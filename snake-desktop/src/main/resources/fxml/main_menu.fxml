<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hu.alkfejl.controller.MainMenuController">
   <top>
      <Label text="Ekans" BorderPane.alignment="CENTER">
         <font>
            <Font size="30.0" />
         </font>
      </Label>
   </top>
   <center>
      <VBox alignment="CENTER" fillWidth="false" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#startSinglePlayer" text="Play alone :(" textAlignment="CENTER" />
            <Button mnemonicParsing="false" onAction="#startMultiPlayer" text="Play with an acquaintance :|" textAlignment="CENTER" />
            <Button mnemonicParsing="false" onAction="#openSettings" text="Settings" textAlignment="CENTER" />
            <Button mnemonicParsing="false" onAction="#exitApp" text="Exit" textAlignment="CENTER" />
         </children>
      </VBox>
   </center>
</BorderPane>
