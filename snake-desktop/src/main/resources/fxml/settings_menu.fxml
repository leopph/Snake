<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane fx:id="root" stylesheets="@../css/settings_menu.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hu.alkfejl.controller.SettingsMenuController">
   <children>
      <Label fx:id="settingsTitleLabel" text="Settings" AnchorPane.leftAnchor="500.0" AnchorPane.rightAnchor="500.0" AnchorPane.topAnchor="0.0" />
      <VBox fx:id="wallEditVbox" alignment="CENTER" fillWidth="false" styleClass="labeledContentBox" AnchorPane.leftAnchor="30.0" AnchorPane.topAnchor="150.0">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" minWidth="40.0" styleClass="wallsLabel" text="Walls" textAlignment="CENTER">
               <font>
                  <Font name="Comic Sans MS" size="36.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" fillHeight="false" styleClass="wallHbox">
               <children>
                  <CheckBox fx:id="m_UpWallCheck" mnemonicParsing="false" text="Up Wall">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </CheckBox>
                  <CheckBox fx:id="m_DownWallCheck" mnemonicParsing="false" text="Down Wall" />
                  <CheckBox fx:id="m_LeftWallCheck" mnemonicParsing="false" text="Left Wall" />
                  <CheckBox fx:id="m_RightWallCheck" mnemonicParsing="false" text="Right Wall" />
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
      <VBox id="speedBox" alignment="CENTER" fillWidth="false" styleClass="labeledContentBox" AnchorPane.leftAnchor="550.0" AnchorPane.rightAnchor="510.0" AnchorPane.topAnchor="150.0">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" text="Game Tick Speed" />
            <TextField fx:id="m_GameSpeedInput" />
         </children>
      </VBox>
      <HBox alignment="CENTER" AnchorPane.topAnchor="400.0">
         <children>
            <VBox alignment="CENTER">
               <children>
                  <Label alignment="CENTER" contentDisplay="CENTER" text="Player1 Snake Head Color" />
                  <ColorPicker fx:id="m_P1HeadColor" />
               </children>
            </VBox>
            <VBox alignment="CENTER">
               <children>
                  <Label alignment="CENTER" contentDisplay="CENTER" text="Player1 Snake Body Color" />
                  <ColorPicker fx:id="m_P1BodyColor" />
               </children>
            </VBox>
            <VBox alignment="CENTER">
               <children>
                  <Label alignment="CENTER" contentDisplay="CENTER" text="Player 2 Snake Head Color" />
                  <ColorPicker fx:id="m_P2HeadColor" />
               </children>
            </VBox>
            <VBox alignment="CENTER" HBox.hgrow="NEVER">
               <children>
                  <Label alignment="CENTER" contentDisplay="CENTER" text="Player 2 Snake Body Color" />
                  <ColorPicker fx:id="m_P2BodyColor" />
               </children>
            </VBox>
         </children>
      </HBox>
      <HBox alignment="CENTER" AnchorPane.topAnchor="500.0">
         <children>
            <VBox alignment="CENTER">
               <children>
                  <Label text="Apple Color" />
                  <ColorPicker fx:id="m_AppleColor" />
               </children>
            </VBox>
            <VBox alignment="CENTER">
               <children>
                  <Label text="Cucumber Color" />
                  <ColorPicker fx:id="m_CucumberColor" />
               </children>
            </VBox>
            <VBox alignment="CENTER">
               <children>
                  <Label text="Peach Color" />
                  <ColorPicker fx:id="m_PeachColor" />
               </children>
            </VBox>
            <VBox alignment="CENTER">
               <children>
                  <Label text="Banana Color" />
                  <ColorPicker fx:id="m_BananaColor" />
               </children>
            </VBox>
         </children>
      </HBox>
      <HBox alignment="CENTER" AnchorPane.topAnchor="600.0">
         <children>
            <VBox alignment="CENTER">
               <children>
                  <Label text="Player 1 Name" />
                  <TextField fx:id="m_P1NameInput" />
               </children>
            </VBox>
            <VBox alignment="CENTER">
               <children>
                  <Label text="Player 2 Name" />
                  <TextField fx:id="m_P1NameInput" />
               </children>
            </VBox>
         </children>
      </HBox>
      <HBox alignment="CENTER" styleClass="labeledContentBox" AnchorPane.rightAnchor="75.0" AnchorPane.topAnchor="150.0">
         <children>
            <VBox alignment="CENTER" fillWidth="false">
               <children>
                  <Label alignment="CENTER" contentDisplay="CENTER" text="Number of Rows" />
                  <TextField fx:id="m_MapRowInput" />
               </children>
            </VBox>
            <VBox alignment="CENTER" fillWidth="false">
               <children>
                  <Label alignment="CENTER" contentDisplay="CENTER" text="Number of Columns" />
                  <TextField fx:id="m_MapColumnInput" />
               </children>
            </VBox>
         </children>
      </HBox>
      <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onBack" text="Back" AnchorPane.bottomAnchor="14.0" AnchorPane.leftAnchor="500.0" AnchorPane.rightAnchor="500.0">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </Button>
   </children>
</AnchorPane>
